class Solution {
    public int numberOfSubarrays(int[] nums, int k) {
        return atMostKOdds(nums, k) - atMostKOdds(nums, k - 1);
    }

    private int atMostKOdds(int[] nums, int k) {
        int left = 0, right = 0, count = 0, res = 0;

        while (right < nums.length) {
            if (nums[right] % 2 == 1) {
                count++;
            }

            while (count > k) {
                if (nums[left] % 2 == 1) {
                    count--;
                }
                left++;
            }

            res += right - left + 1;
            right++;
        }

        return res;
    }
}