// First Solution
class Solution {
    public int numRescueBoats(int[] people, int limit) {
        int size = people.length;
        Arrays.sort(people);
        int left = 0, right = size - 1;
        int cnt = 0;
        while(left <= right){
            if(people[right] ==limit){
                right--;
                cnt+=1;
            }else{
                int sum = people[left] + people[right];
                if(sum == limit) 
                {
                    left++; right--; cnt+=1;
                }
                else if(sum > limit)
                {
                    right--; cnt+=1;
                }
                else {
                    left++; right--; cnt+=1;
                    }
            }
            // if(people[left]==people[right] && people[left]<=limit){
            //     cnt+=1;
            //     return cnt;
            // }
        }
        return cnt;
    }
}


// Second Solution Greedy
class Solution {
    public int numRescueBoats(int[] people, int limit) {
        Arrays.sort(people);
        int cnt = 0;
        int left = 0, right = people.length-1;
        while(left <= right){
            if(people[left] + people[right] <= limit){
                left++;
            }
            right--;
            cnt++;
        }
        return cnt;
    }
}