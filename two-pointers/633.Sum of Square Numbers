class Solution {
    public boolean judgeSquareSum(int c) {
        if(c < 0) return false;

        long left = 0, right = (int)Math.sqrt(c);
        while(left <= right){
            long sum = left*left + right*right;
            if(sum == c) return true;
            if(sum > c) right--;
            else left++;
        }
        return false;
    }
}